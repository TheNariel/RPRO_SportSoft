@model RPRO_SportSoft.Court

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upravit</h2>
@ViewBag.MessageEditCourt
@using (Html.BeginForm("Edit", "Courts", FormMethod.Post))
{
    <p>
        @Html.Hidden("Id", Model.Id) <br />
        @Html.Hidden("Sports_Id", Model.Sports_Id) <br />
        Název kurtu: @Html.TextBox("CourtName", Model.Name, new { @class = "form-control", placeholder = "", required = "required" }) <br />
        <input type="submit" value="Uložit změny" />
    </p>
} 

<div>
    @Html.ActionLink("Zpět na výpis", "Details","Sports", new { id = Model.Sports_Id },null)
</div>

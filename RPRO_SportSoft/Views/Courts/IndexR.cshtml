@model  List<ReservationFormated>

@{
    ViewBag.Title = "Výpis rezervací";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/toastr.js"></script>
<h2>Výpis rezervací</h2>
@if (TempData["MessageCancelReservation"] != null)
{
    <script language="javascript">
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-bottom-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        toastr.success('@TempData["MessageCancelReservation"]');
    </script>
}
@if (TempData["MessageCreateReservation"] != null)
{
    <script language="javascript">
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-bottom-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        toastr.success('@TempData["MessageCreateReservation"]');
    </script>
}
<h3>Nadcházející rezervace</h3>
<table class="table">
    <tr class="default">
        <th>
            Datum
        </th>
        <th>
            Kurt
        </th>
        <th>
            Čas
        </th>
        <th>
            Cena za půl hodiny
        </th>
        <th>
            
        </th>
   </tr>

    @foreach (var item in Model)
    {
        <tr class="default">
            <td>
                @{ 
                    DateTime date = item.date;
                }
                @date.ToString("dd.MM.yyyy")
            </td>
            <td>
                @ViewBag.MapedCourts[item.courtId]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.ActionLink("Zrušit", "CancelReservation", new {d= item.date, cId= item.courtId, price= item.price, time = item.time, ids = item.ids })
            </td>
         </tr>
    }

</table>

<br />
<h3>Uplynulé rezervace</h3>
<table class="table">
    <tr class="default">
        <th>
            Datum
        </th>
        <th>
            Kurt
        </th>
        <th>
            Čas
        </th>
        <th>
            Cena za půl hodiny
        </th>
        </tr>

    @foreach (var item in ViewBag.PastReservations)
    {
        <tr class="default">
            <td>
                @{
                    DateTime date = item.date;
                }
                @date.ToString("dd.MM.yyyy")
            </td>
            <td>
                @ViewBag.MapedCourts[item.courtId]
            </td>
            <td>
                 @item.time
            </td>
            <td>
                @item.price
            </td>
        </tr>
                    }

</table>
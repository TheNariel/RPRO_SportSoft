@model Court

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vytvoření kurtu</h2>
@ViewBag.MyMessageToUser

@*<h4>Kurt</h4>
<hr />*@
@using (Html.BeginForm("Create", "Courts",FormMethod.Post))
{
    
    <p>
        @Html.Hidden("Id",Model.Sports_Id) <br />
        Název kurtu: @Html.TextBox(("CourtName"), Model.Name, new { @class = "form-control", onkeyup = "this.value = this.value.replace(/[^a-z,A-Z,_,á-ž,0-9]/, '')", placeholder = "", required = "required" }) <br />
        <input type="submit" value="Vytvořit"/>

    </p>
} 
@Html.ActionLink("Zpět", "Details", "Sports", new { id = Model.Sports_Id }, null)




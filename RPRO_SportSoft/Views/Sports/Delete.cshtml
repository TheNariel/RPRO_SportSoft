@model Sport

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Smazání sportoviště</h2>
@ViewBag.MyMessageToUser
<h3>Opravdu chcete vymazat sportoviště @Html.DisplayFor(model => model.Name)?</h3>
<div>
    @*<h4>Sportoviště</h4>*@
    @*<hr />*@
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.Name)*@
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Name)*@
        </dd>

    </dl>

    
    @if(ViewBag.MyMessageToUser == null) { 
        using (Html.BeginForm()) {
           @*@Html.AntiForgeryToken()*@

           <div class="form-actions no-color">
               <input type="submit" value="Vymazat" class="btn btn-default" /> |
               @Html.ActionLink("Zpět na výpis", "Index")
          </div>
        }
    }
</div>

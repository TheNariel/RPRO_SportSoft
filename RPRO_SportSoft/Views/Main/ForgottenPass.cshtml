
@{
    ViewBag.Title = "Zapomenuté heslo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/toastr.js"></script>
<h2>Zapomenuté heslo</h2>
@if (ViewData["MessageForgottenPass"] != null)
{
    <script language="javascript">
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-bottom-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        toastr.success('@ViewData["MessageForgottenPass"]');
    </script>
}

@using (Html.BeginForm("ForgottenPass", "Main", FormMethod.Post, new { @class = "noborder-form" }))
{
    <p>
        Email: @Html.TextBox("e", "", new { @class = "email form-control", type = "email", placeholder = "jmeno@domena.com", required = "required" }) <br />  
        <input type="submit" value="Odeslat email" />

    </p>
}


<div>
    @Html.ActionLink("Zpět", "Index")
</div>

        }

      th, td {
         text-align: left;
         padding: 6px;
        }

      tr:nth-child(even){background-color: #c3c3c3}

      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        background-color: #000020;
       }

        li {
            float: left;
        }

    li a {
       display: block;
       color: white;
       text-align: center;
       padding: 14px 16px;
       text-decoration: none;
    }

    li a:hover:not(.active) {
      background-color: #111;
    }

    .active {
      background-color: #4CAF50;
    }


